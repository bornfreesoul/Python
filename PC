#YOY = (CurrentYear - LastYear)/CurrentYear)

print "*** Welcome to the PC Application ***"
print " "; 

AmountValue = float(raw_input("Please enter the amount value: \n"));
Percentage = float(raw_input("Please enter the percentage value: \n"));

PCT = float(AmountValue / 100);

print " "; 

PC = PCT * Percentage
print "The % amount is: \n", PC;

print " "; 

FinalAmount = AmountValue + PC;
print "The final amount value after adding the % value amount is: \n", FinalAmount;

import webbrowser

webbrowser.open("http://testing-mines.blogspot.in/");
