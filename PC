print "*** Welcome to the PC Application ***"
print " "; 

AmountValue = float(raw_input("Please enter the amount value: \n"));
Percentage = float(raw_input("Please enter the percentage value: \n"));

PCT = float(AmountValue / 100);

PC = AmountValue + PCT * Percentage

print "The final value is after adding % amount is: ", PC;

